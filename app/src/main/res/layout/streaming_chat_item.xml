<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_person_black_24dp"
        android:id="@+id/civStreamingChatProfile"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:id="@+id/ivStreamingBalloon"
                android:background="@drawable/anim"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="50dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:id="@+id/tvTokenCount"
                android:visibility="gone"/>

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="email@email.com"
            android:layout_weight="1"
            android:id="@+id/tvStreamingChatName"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvStreamingChatMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="messagssagssagssage"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>