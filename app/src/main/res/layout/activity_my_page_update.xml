<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegister.RegisterActivity"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:text="회원 정보 수정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#006977"
        android:gravity="center"/>


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:id="@+id/ivUpdateProfileImage"
        android:src="@drawable/ic_person_black_24dp"/>


    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/etUpdateName"
        android:hint="name"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:background="#C4EC91"/>


    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:id="@+id/etUpdatePassword"
        android:hint="비밀번호 입력"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:background="#EECAD6"
        android:inputType="textPassword"
        />

    <Button
        android:layout_marginTop="20dp"
        android:text="확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00BCD4"
        android:id="@+id/btnSubmit" />

    <Button
        android:text="돌아가기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/btnBack"
        android:background="#FFFFFF"/>

</LinearLayout>